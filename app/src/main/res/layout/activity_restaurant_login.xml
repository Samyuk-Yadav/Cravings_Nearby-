<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/Background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Restaurant_Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/back_btn1"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:padding="3dp"
            android:paddingStart="3dp"
            android:src="@drawable/back_arrow1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="1dp"
            android:text="Hotel Login Here!"
            android:textColor="@color/Orange"
            android:textStyle="bold"
            android:textSize="28dp"
            android:fontFamily="@font/berkshire_swash"
            android:gravity="center"
            android:textAlignment="center"
            android:padding="3dp"
            android:paddingStart="3dp"


            />

    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/RLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="7dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/restaurant" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="Restaurant? Login In Here!"
        android:textSize="21sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Enter your Email ID.."
        android:background="@color/white"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidthFocused="2dp"
        android:layout_margin="3dp"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/email"
        app:endIconTint="@color/black"
        app:startIconTint="@color/black"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:fontFamily="@font/alatsi"
            android:textColor="@color/black" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Login Password"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidthFocused="2dp"
        app:startIconDrawable="@drawable/password"
        android:background="@color/white"
        android:textColorHint="@color/black"
        android:layout_margin="3dp"
        app:endIconTint="@color/black"
        app:startIconTint="@color/black"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:fontFamily="@font/alatsi"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forget_passwordl"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:background="#AFDDF6"
        android:text="Forgot Password?"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_Next1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="callingNext2Screen"
        android:transitionName="button_next1"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_layout"
        android:padding="8dp"
        android:text="LOGIN"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="14dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Or, Login using"
        android:textStyle="normal"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

        <Button
            android:id="@+id/button_Google_Register"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/white"
            android:padding="15dp"
            android:drawableLeft="@drawable/google1"
            android:text="Google"
            android:textColor="@color/black"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_Facebook_Register"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#2196F3"
            android:drawableLeft="@drawable/facebook"
            android:padding="15dp"
            android:text="Facebook"
            android:textColor="@color/white"
            app:cornerRadius="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/do_not_Have_an_Account_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:padding="7dp"
        android:text="Do not have an account? Click Here!"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="16sp"/>

</LinearLayout>