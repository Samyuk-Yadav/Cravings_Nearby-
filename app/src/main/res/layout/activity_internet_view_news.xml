<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Internet_View_News"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar11"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/light_creme">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/heading_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Today's Updates"
                android:textColor="@color/Red"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/star_pink1"
                android:layout_toEndOf="@+id/star_star"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/star_star"
                android:layout_toEndOf="@+id/back_red2"
                android:layout_width="40dp"
                android:layout_marginStart="3dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/design_star">

            </ImageView>

            <ImageView
                android:id="@+id/back_red2"
                app:srcCompat="@drawable/back_red"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_width="40dp"
                android:layout_height="37dp">

            </ImageView>

            <ImageView
                android:id="@+id/star_pink1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:layout_width="40dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/design_star">

            </ImageView>


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <WebView
        android:id="@+id/view1_web"
        android:layout_below="@id/tool_bar11"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>


</RelativeLayout>