<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/bg_cart"
    android:elevation="3dp"
    android:layout_margin="9dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="6dp"
        android:text="Title"
        android:textColor="@color/title_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/food_pic"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:srcCompat="@drawable/hot_dog" />

    <TextView
        android:id="@+id/food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="0.00"
        android:textColor="@color/title_color"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_btn"
        app:layout_constraintEnd_toEndOf="@+id/food_pic"
        app:layout_constraintStart_toStartOf="@+id/food_pic"
        app:layout_constraintTop_toBottomOf="@+id/food_pic" />

    <TextView
        android:id="@+id/pound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Â£"
        android:textColor="@color/pink"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/food_price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/food_pic"
        app:layout_constraintTop_toBottomOf="@+id/food_pic"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/add_btn"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/ad_banner_layout"
        android:text="+ ADD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/food_pic"
        app:layout_constraintStart_toStartOf="@+id/food_pic"
        app:layout_constraintTop_toBottomOf="@+id/pound" />


</androidx.constraintlayout.widget.ConstraintLayout>