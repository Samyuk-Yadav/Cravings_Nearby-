<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/Background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Screen_Register_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_margin="2dp">

    <ImageView
        android:id="@+id/back_btn3"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="3dp"
        android:padding="3dp"
        android:paddingStart="3dp"
        android:src="@drawable/back_arrow1" />

    <TextView
        android:id="@+id/textView1_3"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/alatsi"
        android:layout_marginLeft="270dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="3/3"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/RLogo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/register_logo" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alatsi"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="ðŸŽ‰ We are Almost Done! ðŸŽ‰"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/desi_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true"
            app:ccp_arrowColor="@color/black"
            app:ccp_autoDetectCountry="true"
            app:ccp_showNameCode="true"
            app:ccp_contentColor="@color/black"
            app:ccp_flagBorderColor="@color/yellow"
            android:background="@drawable/border_country_picker"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter Phone Number:"
            android:background="@color/white"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            android:layout_margin="5dp"
            android:textColorHint="@color/black"
            app:startIconDrawable="@drawable/call"
            app:endIconTint="@color/black"
            app:startIconTint="@color/black"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:fontFamily="@font/alatsi"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_Next_Register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="verifyScreen_OTP"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="@color/yellow"
        android:padding="10dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="14dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="If Already a User? Login using"
        android:textStyle="normal"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button_Register3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_layout"
        android:padding="10dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="14dp" />

</LinearLayout>