<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="280dp"
xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:padding="11dp"
    android:id="@+id/v_ViewCard"
    android:layout_height="match_parent"
    android:elevation="5.1dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="2.7dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/main_heading"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:maxLines="2"
            android:padding="6dp"
            android:layout_height="63dp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="@string/Top_Heading"
            android:textSize="19sp">
        </TextView>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_height="131dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="@string/Side_Context"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/text_description_news"
                android:paddingLeft="4.5dp"
                android:paddingRight="1dp"
                android:layout_weight="1"
                android:maxLines="7">
            </TextView>

            <ImageView
                android:id="@+id/selection_Image_news"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/id_author_Samyuk"
            android:padding="6dp"
            android:textColor="@color/DarkRed"
            android:textStyle="bold"
            android:text="Author: Samyuk"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/id_time_Samyuk"
            android:text="Published Place:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:fontFamily="@font/alatsi">
        </TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>