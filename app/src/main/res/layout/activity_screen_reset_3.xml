<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:padding="8dp"
    tools:context=".Screen_Reset_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back3_reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/back_arrow1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_margin="6dp"
                android:fontFamily="@font/abril_fatface"
                android:text="Enter New \nCredentials"
                android:textAllCaps="true"
                android:textSize="35sp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ResetLogo3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_margin="3dp"
                app:layout_constraintVertical_bias="0.0"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/reset_logo_3" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="23dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="You are Verified Successfully \n ðŸ”’ Set your New Password ðŸ”’"
            android:textSize="25sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter New Password"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/password"
            android:background="@color/white"
            android:textColorHint="@color/black"
            android:layout_margin="4dp"
            app:endIconTint="@color/black"
            app:startIconTint="@color/black"
            app:boxBackgroundColor="@color/white"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:fontFamily="@font/alatsi"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Confirm Password"
            app:hintTextColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="2dp"
            app:startIconDrawable="@drawable/password"
            android:background="@color/white"
            app:boxBackgroundColor="@color/white"
            android:textColorHint="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:endIconTint="@color/black"
            app:startIconTint="@color/black"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:fontFamily="@font/alatsi"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_Login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/button_layout"
            android:padding="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="OK"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            app:cornerRadius="15dp" />


    </LinearLayout>

</ScrollView>