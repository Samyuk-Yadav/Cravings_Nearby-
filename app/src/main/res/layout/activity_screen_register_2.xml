<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/Background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Screen_Register_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

    <ImageView
        android:id="@+id/back_btn_register"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_gravity="left"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="3dp"
        android:padding="3dp"
        android:paddingStart="3dp"
        android:src="@drawable/back_arrow1" />

    <TextView
        android:id="@+id/textView1_3"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alatsi"
        android:layout_marginLeft="270dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="2/3"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/alatsi"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="A few More Details, Please Hang On! ðŸŽŽ"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Choose Gender"
            android:layout_marginBottom="9dp">
        </TextView>


            <RadioGroup
                android:id="@+id/group_radio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="7dp"
                    android:text="Male â™‚"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="7dp"
                    android:text="Female â™€"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="7dp"
                    android:text="Other âš¥"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />

            </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Select your Age"
            android:layout_marginBottom="9dp"/>

        <DatePicker
            android:id="@+id/picker_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnersShown="true"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:textAlignment="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:calendarTextColor="@color/black"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>






    </LinearLayout>



    <Button
        android:id="@+id/button_Next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_layout"
        android:backgroundTint="@color/yellow"
        android:padding="10dp"
        android:text="Next"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="14dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="If Already a User? Login using"
        android:textStyle="normal"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button_Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_layout"
        android:padding="10dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="14dp" />

</LinearLayout>